{
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2015
  },
  "env": { "browser": true, "node": true, "es6": true },
  "root": true,
  "rules": {
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@", "./src/scripts"]
        ],
        "extensions": [".ts", ".js", ".json"]
      }
    }
  }
}